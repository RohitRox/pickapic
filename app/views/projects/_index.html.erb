<table id="project_table">
  <thead><tr>
    <th>Title</th>
    <th>Entries</th>
    <th>Budget</th>
    <th>Time Remaining</th>
  </tr></thead>

  <% @projects.each do |project| %>
  <tr>
    <td><h3><%=link_to project.title,project_path(project) %></h3><p><%= project.description.truncate(150) %></p></td>
    <td><%= project.submissions.size%></td>
    <td><%= project.budget %></td>
    <td><%=distance_of_time_in_words(project.deadline,Time.now) %></td>
  </tr>
  <% end %>
</table>

<br />


