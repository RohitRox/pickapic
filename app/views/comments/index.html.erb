<h2 class="float_left"> <%= @submission.project.title %></h2>
<div class="clear"></div>
<br />
<%= image_tag @submission.screenshot.url(:original) %>
<br />
<% @comments.each do |comment| %>
<h3><%=comment.employer.username%> Remarked:</h3>
<p><%=comment.context%></p>
<% end %>
<br />
<h2>Comment to this submission</h2>
<div id="comments_form">
  <%= form_for([@submission, Comment.new]) do |f| %>
  <div class="field">
    <%= f.label :context %><br />
    <%= f.text_area :context%>
  </div>
  <div class="field">
    <%= f.submit %>
  </div>
  <% end %>
</div>
<div class="clear"></div>
<hr />
<%= link_to 'Back', root_path %>

